<div id="main">
<center>
<form class='loginform' method='POST' action:'/signup'>
<div>
	<h2>Enter Your Info To Sign-Up!</h2> 
	<div>
	<div class="input-group">
	<span class="input-group-addon" id="namespan" >Name</span><input type="text" class="form-control"  aria-describedby="namespan" name="name">
	</div>
	<div class="input-group">
	<span class="input-group-addon" id="addrspan" >Address</span><input type="text" class="form-control"  aria-describedby="addrspan" name="address">
	</div>
	<div class="input-group">
	<span class="input-group-addon" id="radiusspan" >Search Radius</span><select class="form-control" aria-describedby="radiusspan" name="radius">
	  <option>10 miles</option>
	  <option>20 miles</option>
	  <option>30 miles</option>
	  <option>40 miles</option>
	  <option>50 miles</option>
	</select>
	</div>
	<div class="input-group" >
	<span class="input-group-addon" id='emailspan' >Email</span><input type="text" class="form-control" aria-describedby="emailspan" id="email" name="email">
	</div>
	<div class="input-group">
	<span class="input-group-addon" id="passwordspan" >Password</span><input class="form-control" type="password" aria-describedby="passwordspan" name="password">
	</div>
	<div class="input-group">
	<span class="input-group-addon" id="confirmspan" >Password</span><input class="form-control" type="password" aria-describedby="confirmspan" name="confirm">
	</div>
	<div class="alert alert-danger" role="alert" style="display:none" id="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <span class="sr-only">Error:</span>
  <span id='flash'>Test</span>
</div>
	<button value="submit" class="btn btn-success">Submit!</button>
	</div>
</form>
</center>
</div>
<script>

$(document).ready(function(){
	flash = '<%= flash[:alert]%>'
	if(flash != '')
	{
		$('#flash').text(flash)
		alert.show()

	}


})
</script>